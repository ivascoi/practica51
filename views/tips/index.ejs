

<ul>
    <% for (var i in tips) { %>
        <% var tip = tips[i]; %>

        <li>

            <% if (tip.accepted ||
                    (session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id) ||             (tipAuthor && tipAuthor.id && tip.Author.id === session.user.id) ))) { %>

                <%= tip.text %>

            <% } %>

            <p>
                <span id="autor">
                    Autor: <%= tip.Author ? tip.Author.username : "AnÃ³nimo" %>
                </span>
            </p>

        <% if (!tip.accepted &&
                    (session.user && (tipAuthor && tip.Author.id === session.user.id)) && !session.user.isAdmin) { %>
                <p> No publicado </p>
            <% } %>

            <% if (!tip.accepted &&
                    (session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id)))) { %>

                <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>/accept?_method=PUT"><button>Aceptar</button></a>

            <% } %>

            <% if ((session.user && (session.user.isAdmin || (quizAuthorId && quizAuthorId === session.user.id)))) { %>

                <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>?_method=DELETE"><button>Borrar</button></a>

            <% } %>

        </li>
    <% } %>
</ul>